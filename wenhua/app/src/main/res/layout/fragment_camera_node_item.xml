<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <ImageView
        android:id="@+id/tree_node_iv"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:src="@drawable/tree_o"/>

    <TextView
        android:id="@+id/tree_node_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/tree_node_iv"
        tools:text="深圳"
        android:textColor="@color/text_color_content"
        android:textSize="16sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginRight="40dp"/>
    <ImageButton
        android:id="@+id/tree_node_btn_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:background="@drawable/shexiangtou"
        />
    <ImageButton
        android:id="@+id/tree_node_btn"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/logcat"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        />
</RelativeLayout>
